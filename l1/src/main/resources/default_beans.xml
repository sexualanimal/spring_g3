<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="logger" class="com.kozak.study.logging.impl.ConsoleLogger"/>

    <bean id="date" class="java.util.Date" scope="prototype"/>

    <bean id="client" class="com.kozak.study.entities.clients.EventClient">
        <constructor-arg index="0" value="228"/>
        <constructor-arg index="1" value="Vasya"/>
        <constructor-arg>
            <list>
                <bean id="message1" class="com.kozak.study.entities.events.MessageEvent">
                    <constructor-arg index="0" value="0"/>
                    <constructor-arg index="1" ref="date"/>
                    <constructor-arg index="2" value="FirstMessage"/>
                </bean>

                <bean id="message2" class="com.kozak.study.entities.events.MessageEvent">
                    <constructor-arg index="0" value="1"/>
                    <constructor-arg index="1" ref="date"/>
                    <constructor-arg index="2" value="SecondMessage"/>
                </bean>

                <bean id="message3" class="com.kozak.study.entities.events.MessageEvent">
                    <constructor-arg index="0" value="2"/>
                    <constructor-arg index="1" ref="date"/>
                    <constructor-arg index="2" value="ThirdMessage"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

    <bean id="startFinish"
          class="com.kozak.study.logging.impl.ServerStartFinishConsoleLogger"
          init-method="started"
          destroy-method="stopped"/>

</beans>